---
// Import translations if necessary
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-slate-600 text-white p-8 md:p-12">
  <!-- Container for all footer content -->
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
    
    <!-- Company Info -->
    <div>
      <h3 class="text-2xl font-semibold mb-4">Poscar</h3>
      <p class="text-gray-200 text-sm mb-4">
        {t('footer.description')} {/* Adjust description key as necessary */}
      </p>
      <p class="text-gray-200 text-sm">Â© {new Date().getFullYear()} Poscar. All rights reserved.</p>
    </div>

    <!-- Quick Links -->
    <div>
      <h4 class="text-xl font-semibold mb-4">{t('footer.quick_links')}</h4>
      <ul class="space-y-3">
        <li><a href={`/${lang}/`} class="text-gray-200 hover:text-blue-300 transition-colors">{t('nav.home')}</a></li>
        <li><a href={`/${lang}/products`} class="text-gray-200 hover:text-blue-300 transition-colors">{t('nav.products_services')}</a></li>
        <li><a href={`/${lang}/about`} class="text-gray-200 hover:text-blue-300 transition-colors">{t('nav.about')}</a></li>
        <li><a href={`/${lang}/blogs`} class="text-gray-200 hover:text-blue-300 transition-colors">{t('nav.blogs')}</a></li>
        <li><a href={`/${lang}/contact`} class="text-gray-200 hover:text-blue-300 transition-colors">{t('nav.contact_us')}</a></li>
      </ul>
    </div>

    <!-- Contact and Social Media -->
    <div>
      <h4 class="text-xl font-semibold mb-4">{t('footer.contact_us')}</h4>
      <ul class="space-y-3 text-gray-200 text-sm">
        <li>{t('footer.phone')}: +1 (123) 456-7890</li>
        <li>{t('footer.email')}: info@poscar.com</li>
        <li>{t('footer.address')}: 123 Poscar Street, Phnom Penh, Cambodia</li>
      </ul>
      <div class="flex space-x-4 mt-6">
        <a href="#" class="text-gray-200 hover:text-blue-300 transition-colors"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="text-gray-200 hover:text-blue-300 transition-colors"><i class="fab fa-twitter"></i></a>
        <a href="#" class="text-gray-200 hover:text-blue-300 transition-colors"><i class="fab fa-linkedin-in"></i></a>
        <a href="#" class="text-gray-200 hover:text-blue-300 transition-colors"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
  </div>
</footer>