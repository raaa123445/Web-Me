---
import Base from '../../layouts/Base.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Base>
  <!-- Contact Us Section -->
  <section class="contact-section py-16 bg-gray-50 text-gray-800 px-6 md:px-12 lg:px-16">
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6">ទាក់ទងមកកាន់ពួកយើង</h2>
      <p class="text-lg md:text-xl text-center mb-8">ពួកយើងរីករាយក្នុងការទទួលបានសំណួររបស់អ្នក! សូមទាក់ទងមកកាន់ពួកយើងដោយផ្ទាល់។</p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact Form -->
        <form action="#" method="POST" class="bg-white shadow-md rounded-lg p-8">
          <div class="mb-6">
            <label for="name" class="block text-lg font-medium text-gray-700 mb-2">ឈ្មោះរបស់អ្នក</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" />
          </div>
          
          <div class="mb-6">
            <label for="email" class="block text-lg font-medium text-gray-700 mb-2">អ៊ីមែល</label>
            <input type="email" id="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500" />
          </div>
          
          <div class="mb-6">
            <label for="message" class="block text-lg font-medium text-gray-700 mb-2">សារ</label>
            <textarea id="message" name="message" rows="5" required class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500"></textarea>
          </div>
          
          <button type="submit" class="w-full bg-teal-500 text-white py-3 rounded-lg text-lg font-semibold hover:bg-teal-400 transition-colors duration-300">
            ផ្ញើសារ
          </button>
        </form>

        <!-- Contact Details -->
        <div class="bg-gray-100 shadow-md rounded-lg p-8">
          <h3 class="text-2xl font-semibold mb-4">ទំនាក់ទំនង</h3>
          <p class="text-lg mb-4">សម្រាប់សំណួរណាមួយ សូមប្រើបែបបទទំនាក់ទំនង ឬទាក់ទងតាមព័ត៌មានខាងក្រោម៖</p>
          
          <ul class="text-lg">
            <li class="mb-4">
              <strong>អាសយដ្ឋាន:</strong><br />
              អាគារ Fii ជាន់ទី៦-៧,<br />
              ផ្លូវវីមានអភ, ភូមិគៀនឃ្លាំង,<br />
              សង្កាត់ជ្រោយចង្វា, ខណ្ឌជ្រោយចង្វា,<br />
              ភ្នំពេញ, កម្ពុជា.
            </li>
            <li class="mb-4">
              <strong>ទូរស័ព្ទ:</strong><br />
              095 569 568 | 081 569 568
            </li>
            <li>
              <strong>អ៊ីមែល:</strong><br />
              info@vithean.com
            </li>
          </ul>

          <!-- Google Map Embed -->
          <div class="mt-8">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3048.3501001134096!2d104.92547577370833!3d11.594652843571561!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310953acc34f48bd%3A0xdc7731a1497fa17b!2sPOSCAR%20Digital%20Co.%2C%20Ltd.!5e1!3m2!1skm!2skh!4v1731403925110!5m2!1skm!2skh" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>